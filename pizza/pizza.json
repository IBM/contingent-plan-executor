{
    "name": "order-pizza",
    "context-variables": {
        "order": {
            "type": "enum",
            "config": [
                "cheese",
                "pepperoni",
                "mushroom",
                "gluten free",
                "hawaiian"
            ]
        },
        "goal": {
            "type": "flag",
            "config": false
        },
        "have-message": {
            "type": "flag",
            "config": false
        },
        "force-statement": {
            "type": "flag",
            "config": false
        }
    },
    "intents": {
        "greet": {
            "variables": [],
            "utterances": [
                "Hey",
                "Hi",
                "hey there"
            ]
        },
        "leave": {
            "variables": [],
            "utterances": [
                "Goodbye",
                "Bye",
                "That's all",
                "i'm done"
            ]
        },
        "share_order": {
            "variables": [
                "$order"
            ],
            "utterances": [
                "I want a $order pizza",
                "$order pizza please!",
                "Do you have $order pizza?"
            ]
        },
        "fallback": {
            "variables": [],
            "utterances": []
        }
    },
    "actions": {
        "ask-order": {
            "name": "ask-order",
            "type": "dialogue",
            "subtype": "dialogue disambiguation",
            "message_variants": [
                "What would you like to order?",
                "What type of pizza would you like?"
            ],
            "fallback_message_variants": [
                "Sorry, that isn't a valid order.",
                "I didn't quite get your order. Can you tell me again?"
            ],
            "condition": [
                [
                    "order",
                    "Unknown"
                ],
                [
                    "force-statement",
                    false
                ]
            ],
            "effect": {
                "global-outcome-name": "validate-order",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "ask-order_DETDUP_validate-order-EQ-valid",
                        "updates": {
                            "order": {
                                "variable": "order",
                                "value": "$order",
                                "certainty": "Known",
                                "interpretation": "spel"
                            },
                            "goal": {
                                "variable": "goal",
                                "value": true,
                                "interpretation": "json"
                            }
                        },
                        "assignments": {
                            "$order": "found"
                        },
                        "intent": "share_order"
                    },
                    {
                        "name": "ask-order_DETDUP_validate-order-EQ-fallback",
                        "updates": {
                            "have-message": {
                                "variable": "have-message",
                                "value": true,
                                "interpretation": "json"
                            },
                            "force-statement": {
                                "variable": "force-statement",
                                "value": true,
                                "interpretation": "json"
                            }
                        },
                        "assignments": {},
                        "intent": "fallback"
                    }
                ]
            },
            "intents": {
                "share_order": {
                    "variables": [
                        "order"
                    ],
                    "utterances": [
                        "I want a $order pizza",
                        "$order pizza please!",
                        "Do you have $order pizza?"
                    ]
                }
            }
        },
        "dialogue_statement": {
            "name": "dialogue_statement",
            "type": "dialogue",
            "message_variants": ["test"],
            "condition": [
                [
                    "have-message",
                    true
                ],
                [
                    "force-statement",
                    true
                ]
            ],
            "effect": {
                "global-outcome-name": "reset",
                "type": "oneof",
                "outcomes": [
                    {
                        "name": "dialogue_statement_DETDUP_reset-EQ-lock",
                        "updates": {
                            "have-message": {
                                "variable": "have-message",
                                "value": false,
                                "interpretation": "json"
                            },
                            "force-statement": {
                                "variable": "force-statement",
                                "value": false,
                                "interpretation": "json"
                            }
                        },
                        "assignments": {},
                        "intent": "fallback"
                    }
                ]
            },
            "intents": {
                "fallback": {
                    "utterances": [],
                    "variables": []
                }
            }
        }
    }
}